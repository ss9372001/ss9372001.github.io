    <title>Signuppage</title>
</head>
<body>
      <!-----------Header------------------->
      <header>
        <nav class="nav_bar">
            
            <a href="../html/index.html">
                <div class="header__logo"><img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg" alt="TVASTRA"></div>
            </a>
            
            <a href="#" class="menu"><i class="fa fa-bars" aria-hidden="true"></i></a>
            
            <div class="header_links">
                <a href="../html/doctor.html">Doctors</a>
                <a href="../html/hospitals.html">Hospitals</a>
                <a href="#">Treatments</a>
                <a href="#">Other Services</a>
                <a href="#">About</a>
            </div>
            
            <div class="navbar_buttons">
                <button class="transparent_button" type="button">Login / Sign Up</button>
                <button class="darkblue_button" type="button">Get a Quote</button>
            </div>
            
        </nav>
    </header>

    <!-------------------Secttion1---------------------->
    <section class="signupform">

        <div class="shadow">
            <div class="signup_heading">
                <h3>Sign Up</h3>
            </div>
            <form action="submit" class="signup">
                
                <div class="input1">
                    <input type="text" placeholder="Enter Name">
                </div>
                <div class="input2">
                    <input type="email" placeholder="Enter Email">
                </div>
                <div class="input3">
                    <input type="password" placeholder="Enter Password">
                </div>
                <div class="input4">
                    <input type="text" placeholder="Enter your Gender">
                    <button type="button"><i class="fa fa-caret-down" aria-hidden="true"></i></button>
                </div>
                <div class="input5">
                    <input type="date" placeholder="dd/mm/yyyy">
                </div>
                <div class="input6">
                    <input type="tel" placeholder="Enter your Phone Number">
                </div>
                <div class="input7and8">
                    <div class="input7">
                        <input type="text" placeholder="Enter City">
                    </div>
                    <div class="input8">
                        <input type="text" placeholder="Enter State">
                    </div>
                </div>
                <div class="input9">
                    <input type="text" placeholder="Select Your Country">
                    <button type="button"><i class="fa fa-caret-down" aria-hidden="true"></i></button>
                </div>
                <div class="signupbutton">
                    <div></div>
                    <button type="submit" class="signup_button">SIGN UP</button>
                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                </div>

            </form>
            <div class="signup_footer">
                <p>Already Registered? <a href="./login.html">Log In</a></p>
            </div>
        </div>

    </section>
    <footer class="footer">
        <p class="foo-ter">All Rights Reserved. <i class="fa fa-copyright" aria-hidden="true"></i> tvastra 2018</p>
    </footer>

</body>
</html>